{% include 'header.html.twig' %}

<div id="content" class="container" role="main">
    <div class="row">
        <div class="span8">
            {% if (have_posts()) %}
            	{% for post in loop %}
                    <div {{ post_class() }} id="post-{{ the_ID() }}">
                        <h2>
                            <a href="{{ the_permalink() }}" rel="bookmark" title="{{ the_title_attribute() }}">{{ the_title() }}</a>
                            <small class="pull-right">{{ the_time('F jS, Y') }}</small>
                        </h2>
                        <div class="entry">
                            {{ the_content(__('Read the rest of this entry â†’', 'kubrick')) }}
                        </div>

            			<p class="postmetadata">
            			    {# the_tags('Tags: ', ', ', '<br />') #}
            			    {# __('Posted in') }} {{ get_the_category_list(', ') }} | #}
                            {{ edit_post_link('Edit', '<i class="symbol">edit</i> ', ' | ') }}
            			    <i class="symbol">comments</i> {{ comments_popup_link('No Comments', '1 Comment', '% Comments', '', 'Comments Closed' ) }}
            			</p>
                    </div>
            	{% endfor %}

                <div class="navigation">
                    <div class="alignleft">{{ next_posts_link(__('&laquo; Older Entries', 'kubrick')) }}</div>
                    <div class="alignright">{{ previous_posts_link(__('Newer Entries &raquo;', 'kubrick')) }}</div>
                </div>
        	{% else %}
                <h2 class="center">{{ __('Not Found', 'kubrick') }}</h2>
                <p class="center">{{ __('Sorry, but you are looking for something that isn&#8217;t here.', 'kubrick') }}</p>
        	{% endif %}
        </div>
        <div class="span4">
            {% include 'sidebar.html.twig' %}
        </div>
    </div>
</div>



{% include 'footer.html.twig' %}
